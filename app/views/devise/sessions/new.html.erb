<div class="home flex mb-48 justify-center items-center">

  <div class="flex justify-center my-12 container mx-auto absolute top-0 mt-56">
    <div class="w-1/3 bg-white shadow-lg p-10 py-10 px-6">
      <h2 class="text-center text-3xl text-orange-500 mb-5">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "text-lg" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full border py-2 px-3 mb-4 focus:outline-orange-500' %>
        </div>

        <div class="field">
          <%= f.label :password, class: "text-lg"  %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'w-full border py-2 px-3 mb-2 focus:outline-orange-500' %>
        </div>

        <div class="actions my-2">
          <%= f.submit "Log in", class: 'py-3 w-full bg-orange-500 text-white hover:bg-orange-600 cursor-pointer' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
  </div>
</div>