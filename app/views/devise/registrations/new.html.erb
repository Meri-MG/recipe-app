<div class="home flex justify-center items-center">
  <div class="flex justify-center my-48 container mx-auto absolute top-0 mt-40">
    <div class="w-1/3 bg-white shadow-lg p-10 py-10 px-6">
      <h2 class="text-center text-3xl text-orange-500 mb-5">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, class: "text-lg" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'w-full border py-2 px-3 mb-4 focus:outline-orange-500' %>
        </div>

        <div class="field">
          <%= f.label :email, class: "text-lg"  %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full border py-2 px-3 mb-4 focus:outline-orange-500' %>
        </div>

        <div class="field">
          <%= f.label :password, class: "text-lg"  %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "text-lg", class: 'w-full border py-2 px-3 mb-4 focus:outline-orange-500'  %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "text-lg"  %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full border py-2 px-3 mb-4 focus:outline-orange-500' %>
        </div>

        <div class="actions mb-4">
          <%= f.submit "Sign up", class: 'py-3 w-full bg-orange-500 text-white hover:bg-orange-600 cursor-pointer'%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
  </div>
</div>