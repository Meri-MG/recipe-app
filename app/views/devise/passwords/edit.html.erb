<div class="home flex mb-48 justify-center items-center">
  <div class="flex justify-center my-48 container mx-auto absolute top-0 mt-56">
    <div class="w-1/3 bg-white shadow-lg p-10 py-10 px-6">
      <h2 class="text-center text-3xl text-orange-500 mb-5">Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "New password", class: "text-lg" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",  class: 'w-full border py-2 px-3 mb-2 focus:outline-orange-500' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: 'w-full border py-2 px-3 mb-2 focus:outline-orange-500' %>
        </div>

        <div class="actions my-2">
          <%= f.submit "Change my password", class: 'py-3 w-full bg-orange-500 text-white hover:bg-orange-600 cursor-pointer' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
  </div>
</div>