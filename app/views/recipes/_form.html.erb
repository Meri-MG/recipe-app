<div class="w-3/5 bg-white shadow-lg pb-10 px-10 pt-5">

 <div class="flex justify-start my-4">
    <%= link_to '< Recipes', recipes_path, class: 'text-gray-500' %>
  </div>

  <h1 class="text-2xl font-bold border-b-2">Add new recipe</h1>

  <% if @recipe.errors.any? %>
    <h2>The following errors prevented the recipe from being saved</h2>
    <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @recipe, local: true) do |f| %>
    <p class="mt-3"> 
      <%= f.label :name, class: 'font-semibold pb-1' %><br />
      <%= f.text_field :name, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder: 'Recipe name' %>
    </p>

    <p class="mt-3"> 
      <%= f.label :description, class: 'font-semibold pb-1' %><br />
      <%= f.text_area :description, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder: 'Recipe description' %>
    </p>

    <p class="mt-3"> 
      <%= f.label :preparation_time, class: 'font-semibold pb-1' %><br />
      <%= f.number_field :preparation_time, step: :any, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder: '00:00' %>
    </p>

    <p class="mt-3"> 
      <%= f.label :cooking_time, class: 'font-semibold pb-1' %><br />
      <%= f.number_field :cooking_time, step: :any, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder: '00:00' %>
    </p>

    <p class="mt-3">
      <%= f.submit class: 'bg-orange-500 py-3 px-6 text-white cursor-pointer hover:bg-orange-700' %>
    </p>
  <% end %>
</div>