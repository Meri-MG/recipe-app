<div class="flex justify-center mt-48 mb-12 container mx-auto">
  <div class="w-4/5 bg-white shadow-lg p-10">
     <h1 class="text-2xl font-bold border-b-2">Add new recipe</h1>
      <% if can? :create, Recipe %>
        <div class="flex justify-end mt-4">
          <%= link_to 'Add Recipe', new_recipe_path(@recipe), class: "py-3 px-6 bg-orange-500 mb-3 text-white hover:bg-orange-700" %>
        </div>
      <% else %>
        <div class="flex justify-end mt-4">
          <%= button_to 'Add Recipe', new_recipe_path(@recipe), class: "py-3 px-6 bg-orange-500 mb-3 text-white hover:bg-orange-700 opacity-50 cursor-not-allowed", disabled: true %>
        </div>
      <% end %>
    <% @recipes.each do |recipe| %>
      <div class="shadow-lg border p-4 flex mb-6">
        <div class="mr-5">
          <%= image_tag "recipe.png", class: "recipe-image"%>
        </div>
        <div>
          <h2 class="text-xl font-semibold"><%= recipe.name %></h2>
          <p class="text-gray-600 mt-1"><%= recipe.description %></p>
          <ul class="flex items-center mt-2">
            <li class=""><%= link_to 'Show', recipe_path(recipe), class: 'text-green-500' %></li>
            <li class="ml-5"><%= button_to 'Delete', recipe_path(recipe), class: 'text-red-400', method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this recipe?" }} %></li>
          </ul>
        </div>
      </div>
    <% end %>
   </div>
</div>
